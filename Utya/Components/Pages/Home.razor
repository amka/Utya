    {
        [Required]
        [StringLength(2000, ErrorMessage = "The {0} must be at least {2} and at max {1} characters long.", MinimumLength = 3)]
        [Url(ErrorMessage = "{0} is not a valid URL")]
        public string? Url { get; set; }
    }

    [SupplyParameterFromForm] private ShortlinkFormModel? Model { get; set; }
    private CreateShortLinkResponse? ResultModel { get; set; }
    private bool Loading { get; set; }

    protected override void OnInitialized()
    {
        Model = new ShortlinkFormModel();

        HttpClient.BaseAddress = new Uri(NavigationManager.BaseUri);
        if (NavigationManager.Uri.Contains("?test"))
        {
            ResultModel = new CreateShortLinkResponse(
                Guid.Empty,
                "http://localhost:5053/J92sad",
                "http://localhost:5053/J92sad",
                DateTime.Now,
                0,
                "data:image/png;base64,"
            );
        }
    }

    private async Task OnSubmit()
    {
        Logger.LogInformation("Id = {Id}", Model?.Url);
        try
        {
            Loading = true;
            Thread.Sleep(1500);
            var response = await HttpClient.PostAsJsonAsync("api/v1/links", new CreateShortLinkRequest(Model!.Url!));
            if (response.IsSuccessStatusCode)
            {
                ResultModel = await response.Content.ReadFromJsonAsync<CreateShortLinkResponse>();
            }
        }
        finally
        {
            Loading = false;
        }
    }

    private async Task CopyToClipboard()
    {
        try
        {
            await JSRuntime.InvokeAsync<string>("navigator.clipboard.writeText", ResultModel?.ShortUrl);
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            throw;
        }
    }

}