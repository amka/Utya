<!-- Hero Section -->
<section class="hero-gradient text-white py-20">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Укорачивайте ссылки с Gusya</h1>
        <p class="text-xl md:text-2xl mb-10 max-w-3xl mx-auto">Самый быстрый и надежный сервис сокращения ссылок. Как
            гусь летит прямо к цели!</p>


        <div class="max-w-2xl mx-auto bg-white rounded-xl p-2 shadow-lg">
            <EditForm Enhance Model="Model" OnValidSubmit="OnSubmit" FormName="ShortlinkForm">
                <div class="flex flex-col md:flex-row">
                    <InputText @bind-Value="Model!.Url" type="text"
                               autofocus
                               placeholder="Вставьте длинную ссылку здесь..."
                               class="w-full flex-grow px-4 py-3 rounded-lg input input-lg text-base-content"/>
                    <button class="mt-2 md:mt-0 md:ml-2 px-6 py-3 rounded-lg btn btn-lg btn-primary"
                            type="submit" disabled="@(Loading || ResultModel?.OriginalUrl == Model?.Url)">
                        <span class="@(Loading ? "hidden transition" : "transition")">
                            <span class="loading loading-spinner "></span>
                        </span>
                        Укоротить
                    </button>
                </div>
                <div class="text-warning-content list">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>
                </div>
            </EditForm>

            @if (ResultModel != null)
            {
                <div class="@(ResultModel == null ? "collapse collapse-close" : "collapse collapse-open")">
                    <div id="resultBox" class="mt-4 collapse-content px-0">
                        <div class="flex flex-col md:flex-row">
                            <div class="url flex-grow text-start text-2xl align-between">
                                <div class="text-primary-content ">
                                    <a href="@ResultModel!.ShortUrl" target="_blank" class="font-bold transition">
                                        <i class="fas fa-up-right-from-square mx-2"></i>
                                        @ResultModel.ShortUrl.Substring("http://".Length)
                                    </a>
                                </div>
                                <div class="flex items-center mt-2 flex-shrink">
                                    <button @onclick="CopyToClipboard"
                                            class="btn btn-default btn-lg rounded-lg w-full md:w-auto">
                                        Копировать
                                        @* <div class="text-neutral-300 kbd">ctrl+c</div> *@
                                    </button>
                                </div>
                            </div>
                            <div class="avatar mt-2 md:mt-0">
                                <div class="w-30 p-2 border border-base-300 rounded-lg w-full md:w-auto">
                                    <img src="@ResultModel.QrCodeBase64" alt="@ResultModel.ShortUrl"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

