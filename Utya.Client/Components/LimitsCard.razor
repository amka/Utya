<div class="card bg-base-100 shadow-sm m-2">
    <div class="card-body" style="padding: 0.75rem;">
        <div class="card-title @(() => Limits == null ? "skeleton" : "")">
            @Limits?.PlanName
        </div>
        <div>
            <div class="flex justify-between">
                <h4>Ссылки</h4>
                <span>
                    <span class="font-bold">@Limits?.LinksUsed</span>
                    /
                    <span class="">@Limits?.LinksLimit</span>
                </span>
            </div>
            <progress class="progress progress-primary w-full" value="@Limits?.LinksUsed"
                      max="@Limits?.LinksLimit"></progress>
        </div>
        <div>
            <div class="flex justify-between">
                <h4>Переходы</h4>
                <span>
                    <span class="font-bold">@Limits?.ClicksUsed</span>
                    /
                    <span class="">@Limits?.ClicksLimit</span>
                </span>
            </div>
            <progress class="progress progress-primary w-full" value="@Limits?.ClicksUsed"
                      max="@Limits?.ClicksLimit"></progress>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public LimitStatus? Limits { get; set; }
}