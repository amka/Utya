@using Utya.Client.Pages
<EditForm Enhance="true" Model="@Model" class="flex flex-col flex-grow px-4"
          OnValidSubmit="_OnSubmit"
          FormName="CreateLinkForm">

    <DataAnnotationsValidator/>
    <ValidationSummary class="text-warning" role="alert"/>
    
    <fieldset class="fieldset">
        <legend class="fieldset-legend">URL</legend>
        <InputText class="input w-full rounded-lg" @bind-Value="Model!.OriginalUrl" autofocus disabled="@Loading"/>
        <ValidationMessage For="() => Model!.OriginalUrl" class="text-warning"/>
    </fieldset>

    <fieldset class="fieldset">
        <legend class="fieldset-legend">Alias</legend>
        <InputText class="input w-full rounded-lg" @bind-Value="Model!.CustomAlias" disabled="@Loading"/>
        <ValidationMessage For="() => Model!.CustomAlias" class="text-warning"/>
    </fieldset>

    <fieldset class="fieldset">
        <legend class="fieldset-legend">Password</legend>
        <InputText class="input w-full rounded-lg" @bind-Value="Model!.Password" disabled="@Loading"/>
        <ValidationMessage For="() => Model!.Password" class="text-warning"/>
    </fieldset>

    <fieldset class="fieldset">
        <legend class="fieldset-legend">Expiration</legend>
        <InputSelect @bind-Value="Model!.Expiration" class="select w-full rounded-lg bg-base-100 text-base-content"
                     disabled="@Loading">
            <option value="@Innie.Expiration.Never">Никогда</option>
            <option value="@Innie.Expiration.SixHours">6 часов</option>
            <option value="@Innie.Expiration.OneDay">1 день</option>
            <option value="@Innie.Expiration.OneWeek">1 неделя</option>
            <option value="@Innie.Expiration.OneMonth">1 месяц</option>
            <option value="@Innie.Expiration.SixMonths">6 месяцев</option>
            <option value="@Innie.Expiration.OneYear">1 год</option>
        </InputSelect>
        <ValidationMessage For="() => Model!.Expiration"/>
    </fieldset>
    
    <div class="flex flex-grow"></div>

    <div class="my-4 flex justify-between">
        <button onclick="@_OnCancel" class="btn rounded-lg" disabled="@Loading">
            Отмена
        </button>
        
        @if (Loading)
        {
            <div class="flex flex-grow"></div>
            <div class="mx-2">
                <span class="loading loading-spinner"></span>
            </div>
        }
        <button type="submit" class="btn btn-primary rounded-lg" disabled="@Loading">
            <i class="fas fa-plus"></i>
            Сохранить
        </button>
    </div>
</EditForm>

@code {
    [Parameter] public bool Loading { get; set; }
    [Parameter] public EventCallback<ShortLinkDto> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    [SupplyParameterFromForm] private ShortLinkDto? Model { get; set; }

    protected override void OnInitialized()
    {
        Model = new ShortLinkDto();
    }

    private void _OnSubmit(EditContext context)
    {
        OnSave.InvokeAsync(Model!);
    }

    private void _OnCancel()
    {
        OnCancel.InvokeAsync();
    }

}